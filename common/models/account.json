{
  "name": "Account",
  "base": "PersistedModel",
  "strict": false,
  "idInjection": false,
  "options": {
    "validateUpsert": true
  },
  "properties": {
    "email": {
      "type": "string",
      "required": true,
      "comments": "Users email"
    },
    "password": {
      "type": "string",
      "required": true,
      "comments": "Users password"
    },
    "salt": {
      "type": "string",
      "required": true,
      "comments": "Salt for user's password"
    },
    "hash": {
      "type": "string",
      "required": true,
      "comments": "Hash for user's password"
    }
    "emailVerified": {
      "type": "boolean",
      "required": true,
      "comments": "Has the account been verified?"
    }
  },
  "validations": [],
  "relations": {},
  "acls": [
    {
      "accessType": "*",
      "principalType": "ROLE",
      "principalId": "$everyone",
      "permission": "ALLOW"
    }
  ],
  "methods": {}
}
